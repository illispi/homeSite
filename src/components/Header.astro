---
import Nav from "./Nav.astro";
import { Image } from "astro:assets";
import blogLogo from "../images/blogLogo.png";

const { current = "" } = Astro.props;
---

<header
  transition:persist="header"
  transition:name="header"
  class="sticky top-0 z-50 flex w-full justify-around bg-gradient-to-t from-amber-500 to-amber-400 py-2"
>
  <div class="flex w-11/12 max-w-screen-xl items-center justify-between">
    <a href="/">
      <Image src={blogLogo} alt="Logo" width={50} />
    </a>

    <Nav current={current} />
  </div>
</header>
